<%- include ('partials/header') -%>


<div class="container">
	<div>
		<h1>
			Your List of Habits
		</h1>	
	</div>
	
	
	<div id="habitForm" class="form-group">
		<form action="/home/habits/<%= currentUser._id %>" method="POST">
			<input type="text" name="habit">
			<button class="btn btn-primary">
				Add
			</button>
		</form>
	</div>	
	
	<div>
		
		<ul id="habits">	
			<% user.habits.forEach(function(habit){ %>
				<li id="<% habit.habit.id %>">
					<%= habit.habit %>	
				</li>	
				<form action="/home/habits/<%= habit._id %>?_method=DELETE" method="POST">
					<input type="submit" value="Delete">
				</form>
			<% }) %>
		</ul>
	</div>
	
</div>




	
